<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Admin Dashboard</title>
    <link rel="stylesheet" href="~/Assets/admin.css">
    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="admin-container">
        <aside class="sidebar">
            @if (Session["UserID"]!=null)
            {
                <a>Welcome, @Session["Username"]</a>
            }
            <br />
            <h2>Admin Panel</h2>
            <nav>
                <ul>
                    <li><a href="@Url.Action("Dashboard", "Admin")">Dashboard</a></li>
                    <li><a href="@Url.Action("Products", "Admin")">Products</a></li>
                    <li><a href="@Url.Action("Orders", "Admin")">Orders</a></li>
                    <li><a href="@Url.Action("Revenue", "Admin")">Revenue</a></li>
                    <li><a href="@Url.Action("Index", "Users")">Users</a></li>
                    <li><a href="@Url.Action("Index", "Categories")">Categories</a></li>
                    <li><a href="@Url.Action("Index","Home")">Homepage</a></li>
                </ul>
            </nav>
        </aside>

        <main class="main-content">
            @RenderBody()
        </main>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>