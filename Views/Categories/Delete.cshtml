@model test1.Models.Category

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Delete Category</h2>

<h3>Are you sure you want to delete this category?</h3>
<hr />

<table class="table table-bordered product-table">
    <!-- Category Name -->
    <tr>
        <th>Category Name</th>
        <td>@Html.DisplayFor(model => model.category_name)</td>
    </tr>

    <!-- Description -->
    <tr>
        <th>Description</th>
        <td>@Html.DisplayFor(model => model.description)</td>
    </tr>
</table>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-actions text-center">
        <!-- Delete Button -->
        <input type="submit" value="Delete" class="btn btn-danger" />

        <!-- Back to List Button -->
        <button type="button" class="btn btn-secondary" onclick="window.location.href='@Url.Action("Index", "Categories")'">Back to List</button>
    </div>
}

<!-- CSS -->
<style>
    table th {
        text-align: left;
        padding-right: 10px;
        vertical-align: middle;
        width: 30%;
    }

    table td {
        vertical-align: middle;
    }

    table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0 10px;
    }

    .form-actions {
        margin-top: 20px;
    }

    .btn-danger {
        background-color: #dc3545;
        border: none;
        color: white;
        padding: 10px 20px;
    }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
        color: white;
        padding: 10px 20px;
    }

        .btn-danger:hover, .btn-secondary:hover {
            opacity: 0.9;
        }

    .text-center {
        text-align: center;
    }
</style>
